---
export interface Props {
    date: string;
    title: string;
    thumbnailUrl: string;
    hiddenClass?: string;
}

const { date, title, thumbnailUrl, hiddenClass } = Astro.props;

function formatDate(dateString: string): string {
    const date = new Date(dateString);
    const year = date.getFullYear();
    const month = (date.getMonth() + 1).toString().padStart(2, '0');
    const day = date.getDate().toString().padStart(2, '0');
    return `${year}/${month}/${day}`;
}
---

<div class={`bg-gray-50 border border-gray-200 rounded-lg shadow-sm transition-transform duration-300 transform hover:scale-105 hover:shadow-lg hover:border-blue-400 ${hiddenClass}`}>
    <!-- 画像 -->
    <div class="">
        <img src={thumbnailUrl} alt={title} class="aspect-[16/9] object-cover rounded-t-lg">
    </div>
    <!-- テキスト内容 -->
    <div class="p-3">
        <p class="text-xs text-gray-500 mb-1">{formatDate(date)}</p>
        <h3 class="text-sm font-semibold text-gray-800 mb-2">
            {title}
        </h3>
    </div>
</div>
