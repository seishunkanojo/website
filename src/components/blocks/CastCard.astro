---
// CastCard.astro
export interface Props {
    name: string;
    age?: number; // オプションに変更
    price: number;
    tagList: string[];
    profileImage: string; // プロフィール画像のURL
}
const { name, age, price, tagList, profileImage } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg overflow-hidden border border-transparent hover:shadow-lg hover:border-blue-500 transition-transform transform hover:scale-105 flex flex-col">
    <!-- プロフィール画像 -->
    <div class="w-full bg-gray-200">
        <img src={profileImage} alt={`${name}のプロフィール画像`} class="w-full aspect-[3/4] object-cover" />
    </div>

    <!-- 詳細情報 -->
    <div class="p-5 flex flex-col justify-between">
        <div>
            <h3 class="text-lg font-bold">
                {name}
                {age !== undefined && <span class="text-gray-500">({age})</span>}
            </h3>
            <p class="text-gray-500">料金: ¥{price}/時間</p>
        </div>
        <div class="mt-3">
            <h4 class="text-sm font-semibold mb-2">特徴:</h4>
            <div class="flex flex-wrap gap-2">
                {tagList.map(tag => (
                    <span class="bg-blue-100 text-blue-600 text-xs font-medium px-2 py-1 rounded">{tag}</span>
                ))}
            </div>
        </div>
    </div>
</div>
