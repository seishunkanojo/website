---
import { Image } from 'astro:assets';
import Heading from "../elements/Heading.astro";
import sea_about from "../../assets/img/sea.jpg";
import vertical_summer from "../../assets/img/vertical_summer.jpg";

// 背景画像のURLを取得
const seaBackgroundUrl = sea_about.src;
---

<!-- <section class="py-10 px-4" style={`background-image: url(${sea.src}); background-size: cover; background-position: center;`}></section> -->

<section class="lg:py-8 xl:py-12 2xl:py-16 overflow-hidden">
    <div class="py-8 px-5
                md:py-12
                lg:rounded-[2rem] lg:max-w-[1400px] lg:mx-auto lg:shadow-elegant
    " style={`background-image: url(${seaBackgroundUrl}); background-size: cover; background-position: center 75%; filter: brightness(1.06);`}>
        <div class="backdrop-blur-sm bg-white/30 p-6 rounded-2xl shadow-soft max-w-5xl mx-auto">
            <Heading heading="About" subtitle="青春彼女について"></Heading>
            <div class="flex flex-col md:flex-row justify-center gap-8 items-center lg:gap-12 xl:gap-16 2xl:gap-24 mt-4">
                <div class="font-klee order-2 md:order-1 text-center md:text-left">
                    <p class="mb-4 text-[15px] sm:text-base lg:mb-5 lg:text-lg xl:text-xl leading-relaxed">
                        <strong class="font-bold text-primary-700 text-lg md:text-xl lg:text-2xl">青春彼女</strong>は素敵な女性と
                        <strong class="text-secondary-600 relative inline-block">
                            デート
                            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-secondary-400 rounded-full"></span>
                        </strong>
                        ができるサービスです。
                    </p>
                    <p class="mb-4 text-[15px] sm:text-base lg:mb-5 lg:text-lg xl:text-xl leading-relaxed">女性がリードするので、何の準備もいりません。</p>
                    <p class="text-[15px] sm:text-base lg:text-lg xl:text-xl leading-relaxed">ぜひ、お気軽にご利用ください。</p>
                    
                    <div class="mt-6 md:mt-8">
                        <a 
                            href="/usage_guide" 
                            class="inline-block bg-white text-primary-600 border border-primary-300 px-6 py-2 rounded-full 
                                shadow-sm hover:shadow-md hover:bg-primary-50 transform hover:-translate-y-0.5 transition-all duration-300 
                                font-medium text-sm md:text-base"
                        >
                            利用方法を見る <i class="fa-solid fa-arrow-right ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="order-1 md:order-2 transform transition-transform duration-500 hover:scale-105">
                    <Image 
                        src={vertical_summer} 
                        alt="夏の風景" 
                        width={400}
                        height={600}
                        format="webp"
                        quality={75}
                        class="aspect-[9/14] object-cover object-bottom w-48 rounded-3xl md:aspect-auto md:w-52 lg:w-56 xl:w-64 2xl:w-72 shadow-elegant"
                    />
                </div>
            </div>
        </div>
    </div>
</section>