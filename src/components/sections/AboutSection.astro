<section class="lg:py-2 xl:py-6 2xl:py-8 lg:bg-sky-100">
    <div class="py-4 px-10
                md:py-8
                lg:rounded-[200px] lg:max-w-[1400px] lg:mx-auto
    " style={`background-image: url(${sea_about.src}); background-size: cover; background-position: center 75%; filter: brightness(1.06);`}>
